@model YourActualNamespace.Models.Employee
@{
    ViewData["Title"] = "Delete Employee"; // Set the title for the view
}

<h2>Delete Employee</h2>

<dl class="row">
    <dt class="col-sm-2">ID</dt>
    <dd class="col-sm-10">@Model.EmployeeId</dd>

    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Position</dt>
    <dd class="col-sm-10">@Model.Position</dd>

    <dt class="col-sm-2">Salary</dt>
    <dd class="col-sm-10">@Model.Salary</dd>

    
</dl>

<p>Are you sure you want to delete this employee?</p>

<form asp-action="Delete" asp-route-id="@Model.EmployeeId" method="post">
    <button type="submit" class="btn btn-danger">Delete</button> |
    <a asp-action="Index">Back to List</a>
</form>
