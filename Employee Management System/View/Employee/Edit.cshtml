
@model YourActualNamespace.Models.Employee
@{
    ViewData["Title"] = "Edit Employee"; // Set the title for the view
}

<h2>Edit Employee</h2>

<form asp-action="Edit" asp-route-id="@Model.EmployeeId" method="post">
    <div class="form-group">
        <label asp-for="Name"></label> 
        <input asp-for="Name" class="form-control" /> 
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EmployeeId"></label> 
        <input asp-for="EmployeeId" class="form-control" readonly /> 
        <span asp-validation-for="EmployeeId" class="text-danger"></span> 
    </div>

    <div class="form-group">
        <label asp-for="Position"></label> 
        <input asp-for="Position" class="form-control" /> 
        <span asp-validation-for="Position" class="text-danger"></span> 
    </div>

    <div class="form-group">
        <label asp-for="Salary"></label> 
        <input asp-for="Salary" class="form-control" /> 
        <span asp-validation-for="Salary" class="text-danger"></span> 
    </div>
    

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save Changes</button>
    </div>
</form>
